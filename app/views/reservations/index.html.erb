<% reservations = Current.user.name == "ADMIN" ? Booking.all : @reservations %>
<% link = Current.user.name == "ADMIN" ? "https://google.com" : "https://duckduckgo.com/" %>
<div class="margin-top" style="width: 620px;">
    <div class="bg-dark p-3 rounded d-flex align-items-center justify-content-between">
        <h3>Reservations</h3>
        <form action=<%= link %> target="_blank">
            <input type="submit" class="btn btn-warning" value="Google Forms">
        </form>
    </div>
    <div class="mt-3"></div>
    <% if Current.user.name != "ADMIN" %>
    <ul class="nav nav-tabs mt-3 nav-fill" id="tab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link tab tab-left active" id="tbp" data-bs-toggle="pill" data-bs-target="#pills-tbp" type="button" role="tab" aria-controls="pills-tbp" aria-selected="true">To Be Payed</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link tab tab-right" id="appr" data-bs-toggle="pill" data-bs-target="#pills-approved" type="button" role="tab" aria-controls="pills-approved" aria-selected="false">Approved</button>
        </li>
    </ul>
    <% end %>
    <div class="tab-content" id="accordion">
        <div class="tab-pane fade show active" id="pills-tbp" role="tabpanel" aria-labelledby="pills-tbp-tab">
            <%= render 'list', reservations: reservations, tbp_or_appr: true %>
        </div>
        <div class="tab-pane fade" id="pills-approved" role="tabpanel" aria-labelledby="pills-approved-tab">
            <%= render 'list', reservations: reservations, tbp_or_appr: false %>
        </div>
    </div>
</div>

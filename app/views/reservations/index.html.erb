<div class="background padding-top" style="width: 620px;">
    <div class="bg-dark p-3 rounded d-flex align-items-center justify-content-between">
        <h2>Reservations</h2>
        <% if Current.user.name == "ADMIN" %>
        <div class="d-flex">
            <form action="https://docs.google.com/spreadsheets/d/1JUe_vmlZnSrEAcZjuI8uVPTY4ZbB9udaCgtNSWozsl0/edit?fbclid=IwAR08Qjy8ySkp2kpongoJLNdbYtjbVucdKDr2NmKec4tE1Noead6fOTJDy74#gid=33817135" target="_blank">
                <input type="submit" class="btn btn-success" value="Responses" style="margin-right: 15px;">
            </form>
            <form action="https://docs.google.com/forms/d/1nEuQ3Fj_9G3Snse89evq_K2oDQLNVpqmLUXTSMxibaE/edit?fbclid=IwAR3WAMcEMBmdX0qz6t-ph2tY4P15EuJ2hWsfUpKJgeP9cO08S9wS12th7Hs" target="_blank">
                <input type="submit" class="btn btn-warning" value="Edit Form">
            </form>
        </div>
        <% else %>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal">Payment Methods</button>
            <%= render 'payment_methods' %>
        <% end %>
    </div>
    <div class="mt-3"></div>
    <% if Current.user.name != "ADMIN" %>
    <ul class="nav nav-tabs mt-3 nav-fill" id="tab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link tab tab-left active" id="tbp" data-bs-toggle="pill" data-bs-target="#pills-tbp" type="button" role="tab" aria-controls="pills-tbp" aria-selected="true">To Be Payed</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link tab tab-middle" id="appr" data-bs-toggle="pill" data-bs-target="#pills-approved" type="button" role="tab" aria-controls="pills-approved" aria-selected="false">Approved</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link tab tab-right" id="appr" data-bs-toggle="pill" data-bs-target="#pills-selected" type="button" role="tab" aria-controls="pills-selected" aria-selected="false">Seats Selected</button>
        </li>
    </ul>
    <% end %>
    <div class="tab-content" id="accordion">
        <div class="tab-pane fade show active" id="pills-tbp" role="tabpanel" aria-labelledby="pills-tbp-tab">
            <%= render 'list', status: 'tbp' %>
        </div>
        <div class="tab-pane fade" id="pills-approved" role="tabpanel" aria-labelledby="pills-approved-tab">
            <%= render 'list', status: 'appr' %>
        </div>
        <div class="tab-pane fade" id="pills-selected" role="tabpanel" aria-labelledby="pills-selected-tab">
            <%= render 'list', status: 'ss' %>
        </div>
    </div>
</div>

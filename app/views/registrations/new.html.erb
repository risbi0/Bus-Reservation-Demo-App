<h1 class="text-center mt-5">Create An Account</h1>
<div class="container justify-content-center" id="container-form">
    <%= form_with model: @user, url: sign_up_path do |f| %>
        <form>
            <div class="form-floating mb-4 mt-4 text-muted">
                <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
                <%= f.label :email %>
            </div>
            <div class="form-floating mb-4 mt-4 text-muted">
                <%= f.text_field :firstname, class: "form-control", placeholder: "First Name" %>
                <%= f.label :first_name %>
            </div>
            <div class="form-floating mb-4 mt-4 text-muted">
                <%= f.text_field :lastname, class: "form-control", placeholder: "Last Name" %>
                <%= f.label :last_name %>
            </div>
            <div class="form-floating mb-4 mt-4 text-muted">
                <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
                <%= f.label :password %>
            </div>
            <div class="form-floating mb-4 mt-4 text-muted">
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
                <%= f.label :confirm_password %>
            </div>
            <%= f.submit "Sign Up", class: "btn btn-primary" %>
        </form>
    <% end %>
</div>
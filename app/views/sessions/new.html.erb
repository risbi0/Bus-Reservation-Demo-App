<div class="background">
    <div class="justify-content-center bg-dark-c p-4 rounded" id="container-signin">
        <%= form_with url: sign_in_path do |f| %>
            <form>
                <h1 class="text-center mt-2">LOGIN</h1>
                <div class="form-floating mb-3 mt-4 text-muted">
                    <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
                    <%= f.label :email %>
                </div>
                <div class="form-floating mb-3 mt-3 text-muted">
                    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
                    <%= f.label :password %>
                </div>
                <%= f.submit "Log In", class: "btn btn-primary", id: "btn-signin" %>
            </form>
        <% end %>
    </div>
</div>
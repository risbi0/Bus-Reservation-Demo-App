<div class="background d-flex align-items-center">
    <div class="bg-dark-c p-4 rounded">
        <h1 class="text-center">Create An Account</h1>
        <div class="container justify-content-center" id="container-form">
            <%= form_for @user, url: sign_up_path do |f| %>
                <form>
                    <div class="form-floating mb-4 mt-4 text-muted">
                        <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
                        <%= f.label :email %>
                    </div>
                    <div class="form-floating mb-4 mt-4 text-muted">
                        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
                        <%= f.label :name %>
                    </div>
                    <div class="form-floating mb-4 mt-4 text-muted">
                        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
                        <%= f.label :password %>
                    </div>
                    <div class="form-floating mb-4 mt-4 text-muted">
                        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
                        <%= f.label :confirm_password %>
                    </div>
                    <%= f.submit "Sign Up", class: "btn btn-primary" %>
                </form>
            <% end %>
        </div>
    </div>
</div>
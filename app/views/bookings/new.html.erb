<div style="width: 500px;">
    <div class="bg-dark mt-4 p-3 rounded">
        <h3>Booking Details</h3>
    </div>
    <table class="table table-dark text-light mt-4">
        <% @books.each do |data| %>
        <tr>
            <td style="width: 50%;">Departure</td>
            <td style="width: 50%;"><%= data.departure %></td>
        </tr>
        <tr>
            <td>Destination</td>
            <td><%= data.destination %></td>
        </tr>
        <tr>
            <td>Date and Time</td>
            <td><%= data.formatted_date_time %></td>
        </tr>
        <tr>
            <td>Seats Available</td>
            <td><%= data.seats_available %></td>
        </tr>
        <tr>
            <td>Price (&#8369;)</td>
            <td id="basePrice"><%= data.price %></td>
        </tr>
        <tr>
            <td>No. of Seats</td>
            <td><input id="numberSlider" type="number" min="1" max="<%= data.seats_available %>" value="1"></td>
            <%# number_field :number, params[:number], { value: 1, min: 1, max: data.seats_available, id: "numberSlider" } %>
        </tr>
        <tr>
            <td>Total Price (&#8369;)</td>
            <td id="totalPrice"><%= data.price %></td>
        </tr>
        <tr>
            <td></td>
            <td><button type="button" class="btn btn-primary">Submit</button></td>
        </tr>
        <% end %>
    </table>
</div>